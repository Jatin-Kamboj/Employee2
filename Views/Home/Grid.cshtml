@model IEnumerable<Employee>

<link href="~/Css/style.css" rel="stylesheet" />
<style>
    .btn{
        margin-top:7px;
    }
</style>
@if (Model != null)
{

    <div class="card-deck">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Photo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    var PhotoPath = "~/Images/" + (employee.PhotoPath ?? "NoImage.png");

                    <tr>
                        <th scope="row" style="text-transform:capitalize;">@employee.id</th>
                        <td style="text-transform:capitalize;">@employee.Name</td>
                        <td style="text-transform:capitalize;">@employee.Email</td>
                        <td>

                            <a asp-controller="Home" asp-action="Index"  asp-route-id="@employee.id">
                                <img class="card-img-top imageThumbnail zoom" asp-append-version="true" src="@PhotoPath" />
                            </a>
                        </td>

                        <td>
                          @Html.ActionLink("View", "Index", "Home", new { id = @employee.id },new { @class="btn btn-primary btn-small"})<br />
                          @Html.ActionLink("Edit", "Edit", "Home", new { id = employee.id },new { @class="btn btn-outline-dark btn-sm" })<br>
                          @Html.ActionLink("Delete", "Delete", "Home", new { id = employee.id }, new { @class="btn btn-outline-dark btn-sm" })
                             
                        </td>
                    </tr>
                }
            </tbody>
        </table>



    </div>

    @section Scripts{


    }
}